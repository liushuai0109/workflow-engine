# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
# Set DB_DISABLED=true to run server without database (recommended for development)
DB_DISABLED=true
# Uncomment below to enable database connection:
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=lifecycle_operations
# DB_USER=postgres
# DB_PASSWORD=your_password

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_change_this_in_production
JWT_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGIN=http://localhost:8000

# Logging
LOG_LEVEL=info

# Claude API Configuration
# ============================================
# 选项1: jiekou.ai 代理服务 (推荐，国内可用)
# ============================================
CLAUDE_API_KEY=your-jiekou-api-key-here
CLAUDE_BASE_URL=https://api.jiekou.ai

# ============================================
# 选项2: 官方 Anthropic API (需要国际信用卡)
# ============================================
# CLAUDE_API_KEY=sk-ant-your-api-key-here
# CLAUDE_BASE_URL=https://api.anthropic.com

# ============================================
# 选项3: aicodewith.com 代理 (当前不可用)
# ============================================
# CLAUDE_API_KEY=sk-acw-your-api-key-here
# CLAUDE_BASE_URL=https://api.aicodewith.com

# 获取 API Key:
# - jiekou.ai: https://jiekou.ai
# - Anthropic: https://console.anthropic.com/
