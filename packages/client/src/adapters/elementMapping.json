{
  "version": "1.0.0",
  "description": "BPMN element type mappings with lifecycle metadata support",
  "mappings": [
    {
      "bpmnType": "bpmn:UserTask",
      "preserveLifecycle": true,
      "lifecycleFields": ["stage", "color", "icon", "description", "version"],
      "extensionFields": ["segments", "triggers"]
    },
    {
      "bpmnType": "bpmn:ServiceTask",
      "preserveLifecycle": true,
      "lifecycleFields": ["stage", "color", "icon", "description", "version"],
      "extensionFields": ["segments", "triggers"]
    },
    {
      "bpmnType": "bpmn:StartEvent",
      "preserveLifecycle": true,
      "lifecycleFields": ["stage", "version"],
      "extensionFields": ["triggers"]
    },
    {
      "bpmnType": "bpmn:EndEvent",
      "preserveLifecycle": true,
      "lifecycleFields": ["stage", "version"],
      "extensionFields": []
    },
    {
      "bpmnType": "bpmn:ExclusiveGateway",
      "preserveLifecycle": true,
      "lifecycleFields": ["stage", "version"],
      "extensionFields": ["segments"]
    },
    {
      "bpmnType": "bpmn:ParallelGateway",
      "preserveLifecycle": true,
      "lifecycleFields": ["stage", "version"],
      "extensionFields": []
    }
  ],
  "lifecycleMetadata": {
    "namespace": "xflow",
    "type": "Lifecycle",
    "required": ["stage", "version"],
    "optional": ["color", "icon", "description"]
  },
  "segmentsMetadata": {
    "namespace": "xflow",
    "type": "Segments",
    "fields": ["segmentIds"]
  },
  "triggersMetadata": {
    "namespace": "xflow",
    "type": "Triggers",
    "fields": ["triggerIds"]
  }
}
