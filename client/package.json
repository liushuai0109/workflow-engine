{
  "name": "@lifecycle/client",
  "version": "1.0.0",
  "description": "User Lifecycle Operations Platform - Frontend Client",
  "main": "index.html",
  "private": true,
  "scripts": {
    "start": "vite --host 0.0.0.0 --port 8000",
    "build": "vue-tsc && vite build",
    "preview": "vite preview",
    "type-check": "vue-tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "AUTO_START_BACKEND=true E2E_SETUP=true E2E_TEARDOWN=true playwright test",
    "test:e2e:quick": "AUTO_START_BACKEND=true E2E_SETUP=true E2E_TEARDOWN=true playwright test --project=quick",
    "test:e2e:full": "AUTO_START_BACKEND=true E2E_SETUP=true E2E_TEARDOWN=true playwright test --project=full",
    "test:e2e:headless": "AUTO_START_BACKEND=true E2E_SETUP=true E2E_TEARDOWN=true playwright test --project=headless-verification",
    "test:e2e:api": "AUTO_START_BACKEND=true E2E_SETUP=true E2E_TEARDOWN=true playwright test --project=api",
    "test:e2e:performance": "AUTO_START_BACKEND=true E2E_SETUP=true E2E_TEARDOWN=true playwright test --project=performance",
    "test:e2e:ui": "AUTO_START_BACKEND=true E2E_SETUP=true E2E_TEARDOWN=true playwright test --project=ui",
    "test:e2e:errors": "AUTO_START_BACKEND=true E2E_SETUP=true E2E_TEARDOWN=true playwright test --project=error-scenarios",
    "test:e2e:all": "AUTO_START_BACKEND=true E2E_SETUP=true E2E_TEARDOWN=true playwright test --project=e2e",
    "test:e2e:ui-mode": "AUTO_START_BACKEND=true E2E_SETUP=true E2E_TEARDOWN=true playwright test --ui",
    "test:e2e:report": "AUTO_START_BACKEND=true E2E_SETUP=true E2E_TEARDOWN=true playwright show-report ../reports/playwright-report",
    "install:deps": "bash scripts/install-deps.sh",
    "verify:start": "bash scripts/verify-start.sh",
    "verify:all": "bash ../../scripts/verify-all.sh"
  },
  "dependencies": {
    "@ant-design/icons-vue": "^7.0.1",
    "@bpmn-io/properties-panel": "^3.33.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/vue3-jest": "^29.2.6",
    "ant-design-vue": "^4.2.6",
    "bpmn-js": "^11.5.0",
    "bpmn-js-properties-panel": "^1.26.0",
    "diagram-js": "^15.4.0",
    "markdown-it": "^14.1.0",
    "vue": "^3.5.26",
    "vue-router": "^4.6.4"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.5",
    "@fission-ai/openspec": "^0.16.0",
    "@jest/globals": "^29.7.0",
    "@playwright/test": "^1.57.0",
    "@types/jest": "^29.5.12",
    "@types/markdown-it": "^14.1.2",
    "@types/node": "^24.7.2",
    "@vitejs/plugin-vue": "^6.0.3",
    "@vue/tsconfig": "^0.8.1",
    "@xmldom/xmldom": "^0.8.11",
    "babel-jest": "^29.7.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "ts-jest": "^29.4.5",
    "typescript": "^5.9.3",
    "vite": "^7.3.0",
    "vue-tsc": "^3.1.1"
  },
  "keywords": [
    "bpmn",
    "diagram",
    "editor",
    "workflow",
    "vue3",
    "typescript"
  ],
  "author": "Your Name",
  "license": "MIT"
}
