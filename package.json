{
  "name": "lifecycle-operations-platform",
  "version": "1.0.0",
  "private": true,
  "description": "User Lifecycle Operations Management Platform - Monorepo",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "clean": "lerna clean",
    "build": "lerna run build",
    "dev": "lerna run dev --parallel",
    "dev:client": "lerna run dev --scope=@lifecycle/client",
    "dev:server": "lerna run dev --scope=@lifecycle/server",
    "test": "lerna run test",
    "lint": "lerna run lint",
    "start": "lerna run start --parallel"
  },
  "devDependencies": {
    "lerna": "^8.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
