{
  "name": "lifecycle-operations-platform",
  "version": "1.0.0",
  "private": true,
  "description": "User Lifecycle Operations Management Platform - Monorepo",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "clean": "lerna clean",
    "build": "lerna run build",
    "start": "lerna run start --parallel",
    "start:client": "lerna run start --scope=@lifecycle/client",
    "start:server-nodejs": "lerna run start --scope=@lifecycle/server-nodejs",
    "start:server-go": "cd packages/server-go && make run",
    "start:server": "npm run start:server-nodejs",
    "test": "lerna run test",
    "lint": "lerna run lint"
  },
  "devDependencies": {
    "lerna": "^8.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
